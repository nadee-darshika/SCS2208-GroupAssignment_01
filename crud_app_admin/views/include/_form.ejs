 <!-- form handling -->
 <form action="/api/doctor" method="POST" id="add_doctor">
    <div class="new_doctor">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Jame Smith">
        </div>

        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>
        
        <div class="form-group">
            <label for="birthday" class="text-light">BirthDay</label>
            <input type="date" name="birthday" value="">
        </div>

        <div class="form-group">
            <label for="mobilenumber" class="text-light">Mobile Number</label>
            <input type="tel" name="mobilenumber" value="">
        </div>

        <div class="form-group">
            <label for="nic" class="text-light">NIC</label>
            <input type="text" name="nic" value="">
        </div>

        <div class="form-group">
            <label for="qualification" class="text-light">Qualification</label>
            <input type="text" name="qualification" value="">
        </div>

        <div class="form-group">
            <label for="specialization" class="text-light">Specialization</label>
            <input type="text" name="specialization" value="">
        </div>        

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>